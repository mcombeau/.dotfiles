# .pylintrc

[MASTER]
ignore=CVS
max-line-length=88

[MESSAGES CONTROL]
# Disable some messages by default
disable=C0114,  # missing-module-docstring
        C0115,  # missing-class-docstring
        C0116   # missing-function-docstring

[BASIC]
# Naming convention regex for various identifiers
variable-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
attribute-rgx=[a-z_][a-z0-9_]{2,30}$
class-attribute-rgx=[a-z_][a-z0-9_]{2,30}$
const-rgx=([A-Z_][A-Z0-9_]*)|(__.*__)
function-rgx=[a-z_][a-z0-9_]{2,30}$
method-rgx=[a-z_][a-z0-9_]{2,30}$
module-rgx=([a-z_][a-z0-9_]*)|([A-Z][A-Za-z0-9]+)$
class-rgx=[A-Z_][a-zA-Z0-9]+$
inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*$

# Good variable names which should not be checked for convention compliance
good-names=i,j,k,e,x,_

# Regular expression which should only match correct method argument names
argument-naming-style=snake_case

# Regular expression which should only match correct class attribute names
attr-naming-style=snake_case

# Regular expression which should only match correct method names
method-naming-style=snake_case

# Regular expression which should only match correct function names
function-naming-style=snake_case

# Regular expression which should only match correct class names
class-naming-style=PascalCase

